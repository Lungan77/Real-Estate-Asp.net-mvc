<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PropertyMax</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        img{
            width:30px;
            display:inline-block;
            padding-left:5px;
        }
 
        body {
            background-image: url(https://wallup.net/wp-content/uploads/2017/03/28/393769-night-park-nature-bench-748x421.jpg);
            background-repeat:no-repeat;
            background-size:cover;
        }

        /*.Container {
            width: 80%;
            text-align: center;
            background-color: aliceblue;
            opacity: 0.8;
            border-radius: 10px;
        }*/

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home/Index" class="navbar-brand" >PROPERTYMAX</a>
                @*@Html.ActionLink("Propery-MAX", "Index", "Home", new { area = "" }, new { @class = "" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (User.IsInRole("Admin"))
                        {
                            <li><a href="~/Admin/Index">Home<img src="~/images/home.png" class="img" /></a></li>
                        }
                        else if (User.IsInRole("Agent"))
                        {
                            <li><a href="~/Agents/Index">Home<img src="~/images/home.png" class="img" /></a></li>
                            <li><a href="~/Requests/Index">Requests<img src="~/images/chat.png" class="img" /></a></li>
                        }
                        else if (User.IsInRole("Client"))
                        {
                            <li><a href="~/Clients/Me">Home<img src="~/images/home.png" class="img" /></a></li>
                            <li><a href="~/Properties/Index">Properties<img src="~/images/realtor.png" /></a></li>
                            <li><a href="~/Home/About">About<img src="~/images/info.png" class="img" /></a></li>
                            <li><a href="~/Home/Contact">Contacts<img src="~/images/telephone.png" class="img" /></a></li>
                            <li><a href="~/Requests/Index">Requests<img src="~/images/chat.png" class="img" /></a></li>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <li><a href="~/Home/Index">Home<img src="~/images/home.png" class="img" /></a></li>
                            <li><a href="~/Home/About">About<img src="~/images/info.png" class="img" /></a></li>
                            <li><a href="~/Home/Contact">Contacts<img src="~/images/telephone.png" class="img" /></a></li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="background-color:dimgrey; padding: 30px; opacity:0.7">
            <p style="color:aliceblue; font-size: 1.3em;">&copy; @DateTime.Now.Year - PropertyMax Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
