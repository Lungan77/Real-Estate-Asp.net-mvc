
@{
    ViewBag.Title = "Me";
}
<style>
    .Container {
        width: 80%;
        text-align: center;
        background-color: aliceblue;
        opacity: 0.8;
        padding: 50px;
        margin: 30px 0;
        border-radius: 10px;
        margin: auto;
    }

    @@media(max-width: 800px) {
        .Container {
            width: 95%;
        }
    }
    .Header {
        padding: 50px;
        margin: auto;
        text-align: center;
        background-color: darkgrey;
        width: 100%;
    }

    .img img {
        width: 150px !important;
        margin: 25px;
    }

    .flex {
        display: flex;
        margin:auto;
        width: 40%;
        margin-top: 50px;
    }
    @@media(max-width: 800px){
        .flex{
            flex-direction:column;
            margin-top: 30px;
        }
    }
    .block {
        font-size: 1.3em;
        text-transform: uppercase;
    }
</style>
<div class="Container">
    <div class="Header">
        <h2>Welcome Client</h2>
    </div>
    <div class="flex">
        
        <div class="block">
            <div class="img">
                <img src="https://cdn-icons-png.flaticon.com/512/602/602175.png" alt="Alternate Text" />
            </div>
            <div>
                @Html.ActionLink("My Properties", "My_Property", "Clients")
            </div>
        </div>
        
        <div class="block">
            <div class="img">
                <img src="https://cdn-icons-png.flaticon.com/512/8818/8818279.png" />
            </div>
            <div>
                @Html.ActionLink("transaction", "Index", "Payments")
            </div>
        </div>
    </div>
</div>




